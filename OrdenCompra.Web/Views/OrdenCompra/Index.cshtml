@model IEnumerable<crud2.OrdenCompra.Domain.Entidades.OrdenCompra>


@{
    ViewData["Title"] = "Listado de Ã“rdenes";
}

<h1>@ViewData["Title"]</h1>

<p><a class="btn btn-primary" asp-action="Create">Nueva Orden</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Proveedor</th>
            <th>Monto</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var o in Model) {
        <tr>
            <td>@o.OrdenCompraId</td>
            <td>@o.Proveedor?.Nombre</td>
            <td>@o.MontoTotal.ToString("C")</td>
            <td>@o.Estado</td>
            <td>@o.FechaCreacion.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@o.OrdenCompraId">Ver</a> |
                <a asp-action="Edit" asp-route-id="@o.OrdenCompraId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@o.OrdenCompraId">Eliminar</a>
                @if(o.Estado == "Creada") {
                    | <form asp-action="Approve" asp-route-id="@o.OrdenCompraId" method="post" class="d-inline">
                        <button class="btn btn-link">Aprobar</button>
                      </form>
                    | <form asp-action="Cancel" asp-route-id="@o.OrdenCompraId" method="post" class="d-inline">
                        <button class="btn btn-link">Cancelar</button>
                      </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
