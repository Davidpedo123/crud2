@model crud2.OrdenCompra.Application.DTOs.OrdenCompraDto

@{
    ViewData["Title"] = "Eliminar Orden";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <h3 class="text-danger">¿Está seguro que desea eliminar esta orden?</h3>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-3">ID:</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        
        <dt class="col-sm-3">Proveedor:</dt>
        <dd class="col-sm-9">@Model.ProveedorNombre</dd>
        
        <dt class="col-sm-3">Monto Total:</dt>
        <dd class="col-sm-9">@Model.MontoTotal.ToString("C")</dd>
        
        <dt class="col-sm-3">Estado:</dt>
        <dd class="col-sm-9">@Model.Estado</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar eliminación
            </button>
        </div>
    </form>
</div>