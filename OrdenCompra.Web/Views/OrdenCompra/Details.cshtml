@model crud2.OrdenCompra.Domain.Entidades.OrdenCompra

@{
    ViewData["Title"] = "Detalle Orden";
}
<h1>@ViewData["Title"]</h1>
<dl class="row">
    <dt class="col-sm-2">ID</dt><dd class="col-sm-10">@Model.OrdenCompraId</dd>
    <dt class="col-sm-2">Proveedor</dt><dd class="col-sm-10">@Model.Proveedor?.Nombre</dd>
    <dt class="col-sm-2">Monto</dt><dd class="col-sm-10">@Model.MontoTotal.ToString("C")</dd>
    <dt class="col-sm-2">Estado</dt><dd class="col-sm-10">@Model.Estado</dd>
    <dt class="col-sm-2">Comentarios</dt><dd class="col-sm-10">@Model.Comentarios</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
