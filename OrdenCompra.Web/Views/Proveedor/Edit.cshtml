@model crud2.OrdenCompra.Application.DTOs.ProveedorDto

@{
    ViewData["Title"] = Model.ProveedorId == 0 ? "Crear Proveedor" : "Editar Proveedor";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(Model.ProveedorId == 0 ? "Create" : "Edit")">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    @if(Model.ProveedorId != 0)
    {
        <input type="hidden" asp-for="ProveedorId" />
    }

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <!-- Repite para Contacto, Telefono, Email, Direccion -->

    <div class="form-group mt-3">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>