@model crud2.Models.Institucion

@{
    ViewData["Title"] = "Editar Institución";
}

<h2>Editar Institución</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sigla" class="control-label"></label>
        <input asp-for="Sigla" class="form-control" />
        <span asp-validation-for="Sigla" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ubicacion" class="control-label"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lat_Min" class="control-label"></label>
        <input asp-for="Lat_Min" class="form-control" />
        <span asp-validation-for="Lat_Min" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lat_Max" class="control-label"></label>
        <input asp-for="Lat_Max" class="form-control" />
        <span asp-validation-for="Lat_Max" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lon_Min" class="control-label"></label>
        <input asp-for="Lon_Min" class="form-control" />
        <span asp-validation-for="Lon_Min" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lon_Max" class="control-label"></label>
        <input asp-for="Lon_Max" class="form-control" />
        <span asp-validation-for="Lon_Max" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-controller="Instituciones" asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
